<div class="row align-items-center border-form">
  <div class="border">
    <div align="center"><h2><%= t('user.forgot_password') %></h2></div>
    <br>
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
      <%= render "users/shared/error_messages", resource: resource %>

      <div class="field">
        <%= f.label  :email, class: 'text' %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control' %>
      </div>

      <div class="actions" align="center">
        <%= f.submit "Send me reset password instructions", class: 'btn btn-primary btn-position .btn-margin-top' %>
      </div>
    <% end %>
    <div align="center"><%= render "users/shared/links" %></div>
  </div>
</div>
