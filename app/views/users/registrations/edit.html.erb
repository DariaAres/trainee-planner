<div class="row align-items-center border-form">
  <div class="border">
    <div align="center"><h2><%= t('user.edit') %> <%= resource_name.to_s.humanize %></h2></div><br>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <%= render "users/shared/error_messages", resource: resource %>

      <div class="field">
        <%= f.label :email, class: 'text' %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control' %>
      </div>
      <br>

      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div><%= t('user.wait') %> <%= resource.unconfirmed_email %></div>
      <% end %>

      <div class="field">
        <%= f.label :password, class: 'text' %><br />
        <%= f.password_field :password, autocomplete: "new-password", class: 'form-control' %>
      </div>
      <br>

      <div class="field">
        <%= f.label :password_confirmation, class: 'text' %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control' %>
      </div>
      <br>

      <div class="field">
        <%= f.label :current_password, class: 'text' %><br/>
        <%= f.password_field :current_password, autocomplete: "current-password", class: 'form-control' %>
      </div>
      <br>

      <div class="actions" align="center">
        <%= f.submit "Update", class: 'btn btn-primary' %>
      </div>
    <% end %>
    <br>

    <div class="text-denger"><%= t('user.precondition_to_cencel') %>
    <br>
    <%= button_to t('user.cancel'), registration_path(resource_name), data: { confirm: t('user.sure'), turbo_confirm: t('user.sure') }, method: :delete, class: 'btn btn-danger' %></div>
  </div>
</div>
