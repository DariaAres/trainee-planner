<div class="row align-items-center border-form">
  <div class="border">
    <div align="center"><h2><%= t('user.sign_up') %></h2></div><br>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <div class="field">
        <%= f.label :first_name, class: 'text' %>
        <%= f.text_field :first_name, class: 'form-control' %>
      </div>

      <div class="field">
        <%= f.label :last_name, class: 'text' %>
        <%= f.text_field :last_name, class: 'form-control' %>
      </div>

      <div class="field">
        <%= f.label  :email, class: 'text' %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control' %>
      </div>

      <div class="field">
        <%= f.label :password, class: 'text' %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> <%= t('user.char_min') %>)</em>
        <% end %>
        <%= f.password_field :password, autocomplete: "new-password", class: 'form-control' %>
      </div>

      <div class="field">
        <%= f.label :password_confirmation, class: 'text' %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control' %>
      </div>
      <br>

      <%= render "users/shared/error_messages", resource: resource %>

      <div class="actions" align="center">
        <%= f.submit t('user.sign_up'), class: 'btn btn-primary' %>
      </div>
    <% end %>

    <div align="center" class="text-top"><%= render "users/shared/links" %></div>
  </div>
</div>

