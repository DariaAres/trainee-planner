<div class="row align-items-center border-form">
  <div class="border">
    <div align="center"><h2><%= t('user.sign_in') %></h2></div>
    <br>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="field">
        <%= f.label  :email, class: 'text' %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control' %>
      </div>
      <div class="field" class="text-top">
        <%= f.label :password, class: 'text' %><br />
        <%= f.password_field :password, autocomplete: "current-password", class: 'form-control' %>
      </div>
      <% if devise_mapping.rememberable? %>
        <div class="field"  class="text-top">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me, class: 'text' %>
        </div>
      <% end %>
      <div class="actions" align="center">
        <%= f.submit "Log in", class: 'btn btn-primary btn-position'%>
      </div>
    <% end %>
    <div align="center"><%= render "users/shared/links" %></div>
  </div>
</div>
